---
import DevIcon from "./icons/DevIcon.astro";
import ProjectItem from "./ProjectItem.astro";

const { lang } = Astro.props

// Texts
import { projects } from "../data.json";

const title = projects[lang].title;
const projects_list = projects[lang].projectslist;
const code = projects[lang].code;
const preview = projects[lang].preview;
---
<div id="projects" data-section="projects" class="h-full flex justify-center w-full">
    <div class="h-full lg:w-[64rem] md:w-[48rem] p-4">
        <div class="inline-flex flex-row items-center w-52 mb-8">
            <DevIcon class="size-10 mr-2"/>
            <h2 class="text-2xl">{title}</h2>
        </div>
        {projects_list.map((data) =>
            <ProjectItem
            {...data}
            code={code}
            preview={preview}
            />
        )}
    </div>
</div>

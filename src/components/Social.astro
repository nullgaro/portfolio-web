---
import DevIcon from "./icons/DevIcon.astro"
import LinkedinIcon from "./icons/LinkedinIcon.astro"
import GithubIcon from "./icons/GithubIcon.astro"

const { lang } = Astro.props;

import { knowme } from "../data.json";

const text = knowme[lang];

const linkItems = [
    {
        title: "Portfolio",
        label: "portfolio",
        url: "/",
        icon: DevIcon,
    },
    {
        title: "LinkedIn",
        label: "linkedin",
        url: "https://www.linkedin.com/in/daniel-milenov/",
        icon: LinkedinIcon,
    },
    {
        title: "Github",
        label: "github",
        url: "https://github.com/nullgaro",
        icon: GithubIcon,
    },
]
---
<div class="mb-8 border-b-2 border-b-slate-700 pb-8">
    <h3 class="text-xl mb-4">{text}</h3>
    <ul class="flex flex-col flex-wrap gap-2 size-fit">
        {linkItems.map((link) =>{
            const IconComponent = link.icon;
            return (
                <li class="text-sm">
                    <a
                        href={link.url}
                        aria-label={link.label}
                        target="_blank"
                        rel="noopener noreferrer"
                        role="link"
                        class="px-2 p-1 inline-flex items-center flex-none transition-colors hover:text-yellow-500"
                    >
                        <IconComponent class="size-4 mr-2"/>
                        {link.title}
                    </a>
                </li>
            )}
        )}
    </ul>
</div>
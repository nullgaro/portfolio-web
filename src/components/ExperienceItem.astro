---
const { position, company, summary, date } = Astro.props
---

<div class="flex flex-row mb-16">
    <div class="mr-16 w-60">
        <h3 class="text-lg text-yellow-400 font-black">{position}</h3>
        <h4 class="text-lg font-black">{company}</h4>
        <time class="text-base">{date}</time>
    </div>
    <p class="text-sm w-[70ch] leading-normal">{summary}</p>
</div>
---
import ExperienceItem from "./ExperienceItem.astro";
import WorkIcon from "./icons/WorkIcon.astro";

import { jobs } from "../data.json";

---

<div class="h-full flex justify-center w-full mb-12">
    <div class="h-full lg:w-[64rem] md:w-[48rem] w-full p-4">
        <div class="inline-flex flex-row items-center w-52 mb-8">
            <WorkIcon class="size-10 mr-2"/>
            <h2 class="text-2xl">Experience</h2>
        </div>
        <div class="md:h-[40rem] sm:h-[60rem] xs:h-[65rem] xxs:h-[75rem] h-[95rem] w-1 bg-slate-700 absolute ml-4 z-0"></div>
        {jobs.map((data) =>
            <div class="flex ml-3 lg:w-[60rem] md:w-[44rem]">
                <div class="size-3 bg-yellow-400 rounded-full mr-6 mt-6 z-0"></div>
                <ExperienceItem {...data}></ExperienceItem>
            </div>
        )}
    </div>
</div>